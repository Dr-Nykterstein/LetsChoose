{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "composite": true,
    "outDir": "dist/",
    "baseUrl": "../client/",
    "paths": {
      "*": ["node_modules/*"],
      "app/*": ["src/*"]
    }
  },
  "include": ["./src/*", "./src/**/*"],
  "references": [{ "path": "../tsconfig.json" }]
}